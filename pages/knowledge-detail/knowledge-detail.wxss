.page .content {
  width: 100%;
  background-color: white;
  margin-top: 20rpx;
  padding: 20rpx;
  box-sizing: border-box;
}
.page .content .title {
  width: 100%;
  text-align: center;
  font-weight: bold;
  margin-bottom: 30rpx;
}
.page .content .article {
  font-size: 25rpx;
  color: #5a5a5a;
  text-indent: 2em;
  padding-bottom: 30rpx;
}
.page .wxParse {
  margin: 0 5px;
  font-family: Helvetica, sans-serif;
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
}
.page view {
  word-break: break-all;
  overflow: auto;
}
.page .wxParse-inline {
  display: inline;
  margin: 0;
  padding: 0;
}
.page .wxParse-div {
  margin: 0;
  padding: 0;
}
.page .wxParse-h1 {
  font-size: 2em;
  margin: 0.67em 0;
}
.page .wxParse-h2 {
  font-size: 1.5em;
  margin: 0.75em 0;
}
.page .wxParse-h3 {
  font-size: 1.17em;
  margin: 0.83em 0;
}
.page .wxParse-h4 {
  margin: 1.12em 0;
}
.page .wxParse-h5 {
  font-size: 0.83em;
  margin: 1.5em 0;
}
.page .wxParse-h6 {
  font-size: 0.75em;
  margin: 1.67em 0;
}
.page .wxParse-h1 {
  font-size: 18px;
  font-weight: 400;
  margin-bottom: 0.9em;
}
.page .wxParse-h2 {
  font-size: 16px;
  font-weight: 400;
  margin-bottom: 0.34em;
}
.page .wxParse-h3 {
  font-weight: 400;
  font-size: 15px;
  margin-bottom: 0.34em;
}
.page .wxParse-h4 {
  font-weight: 400;
  font-size: 14px;
  margin-bottom: 0.24em;
}
.page .wxParse-h5 {
  font-weight: 400;
  font-size: 13px;
  margin-bottom: 0.14em;
}
.page .wxParse-h6 {
  font-weight: 400;
  font-size: 12px;
  margin-bottom: 0.04em;
}
.page .wxParse-h1,
.page .wxParse-h2,
.page .wxParse-h3,
.page .wxParse-h4,
.page .wxParse-h5,
.page .wxParse-h6,
.page .wxParse-b,
.page .wxParse-strong {
  font-weight: bolder;
}
.page .wxParse-i,
.page .wxParse-cite,
.page .wxParse-em,
.page .wxParse-var,
.page .wxParse-address {
  font-style: italic;
}
.page .wxParse-pre,
.page .wxParse-tt,
.page .wxParse-code,
.page .wxParse-kbd,
.page .wxParse-samp {
  font-family: monospace;
}
.page .wxParse-pre {
  white-space: pre;
}
.page .wxParse-big {
  font-size: 1.17em;
}
.page .wxParse-small,
.page .wxParse-sub,
.page .wxParse-sup {
  font-size: 0.83em;
}
.page .wxParse-sub {
  vertical-align: sub;
}
.page .wxParse-sup {
  vertical-align: super;
}
.page .wxParse-s,
.page .wxParse-strike,
.page .wxParse-del {
  text-decoration: line-through;
}
.page .wxParse-strong,
.page .wxParse-s {
  display: inline;
}
.page .wxParse-a {
  color: deepskyblue;
  word-break: break-all;
  overflow: auto;
}
.page .wxParse-video {
  text-align: center;
  margin: 10px 0;
}
.page .wxParse-video-video {
  width: 100%;
}
.page .wxParse-img {
  /*background-color: #efefef;*/
  overflow: hidden;
}
.page .wxParse-blockquote {
  margin: 0;
  padding: 10px 0 10px 5px;
  font-family: Courier, Calibri, "宋体";
  background: #f5f5f5;
  border-left: 3px solid #dbdbdb;
}
.page .wxParse-code,
.page .wxParse-wxxxcode-style {
  display: inline;
  background: #f5f5f5;
}
.page .wxParse-ul {
  margin: 20rpx 10rpx;
}
.page .wxParse-li,
.page .wxParse-li-inner {
  display: flex;
  align-items: baseline;
  margin: 10rpx 0;
}
.page .wxParse-li-text {
  align-items: center;
  line-height: 20px;
}
.page .wxParse-li-circle {
  display: inline-flex;
  width: 5px;
  height: 5px;
  background-color: #333;
  margin-right: 5px;
}
.page .wxParse-li-square {
  display: inline-flex;
  width: 10rpx;
  height: 10rpx;
  background-color: #333;
  margin-right: 5px;
}
.page .wxParse-li-ring {
  display: inline-flex;
  width: 10rpx;
  height: 10rpx;
  border: 2rpx solid #333;
  border-radius: 50%;
  background-color: #fff;
  margin-right: 5px;
}
.page .wxParse-u {
  text-decoration: underline;
}
.page .wxParse-hide {
  display: none;
}
.page .WxEmojiView {
  align-items: center;
}
.page .wxEmoji {
  width: 16px;
  height: 16px;
}
.page .wxParse-tr {
  display: flex;
  border-right: 1px solid #e0e0e0;
  border-bottom: 1px solid #e0e0e0;
  border-top: 1px solid #e0e0e0;
}
.page .wxParse-th,
.page .wxParse-td {
  flex: 1;
  padding: 5px;
  font-size: 28rpx;
  border-left: 1px solid #e0e0e0;
  word-break: break-all;
}
.page .wxParse-td:last {
  border-top: 1px solid #e0e0e0;
}
.page .wxParse-th {
  background: #f0f0f0;
  border-top: 1px solid #e0e0e0;
}
.page .wxParse-del {
  display: inline;
}
.page .wxParse-figure {
  overflow: hidden;
}
