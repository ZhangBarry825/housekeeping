<!--    </view>-->

    <view class="erq" wx:if="{{ifShow}}" bind:tap="cancelCheck">
        <view class="top">
            <image src="../../../images/erweima.png"></image>
            <text>5856352278</text>
        </view>
        <view class="tips">
            请师傅扫码核销
        </view>
    </view>
</view>
