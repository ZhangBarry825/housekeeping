<!--pages/publish-task/selected/selected.wxml-->
<view class="page">
    <view class="requirement">
        <text class="title">我的需求： </text>
        <text class="content">{{demand}}</text>
    </view>
    <view class="price">
        <text class="title">家政报价： </text>
        <text class="content">￥{{dataset.price}}</text>
    </view>
    <view class="user">
        <image class="avatar" mode="aspectFill" src="../../../images/avatar.png"></image>
        <view class="userinfo">
            <view class="info1">
                <view class="name">{{dataset.user_nickname}}</view>
                <view class="gold">保证金{{dataset.margin_amount}}</view>
<!--                <view class="distance">-->
<!--                    <image src="../../../images/address.png"></image>-->
<!--                    <text>3.2公里</text>-->
<!--                </view>-->
            </view>
            <view class="info2">
                 服务{{dataset.order_total}}次 | 评价{{dataset.evaluation_total}}条 | 好评率{{dataset.evaluation_credit_rate}}%
            </view>
        </view>
    </view>
    <view class="orderPrice">
        <text class="title">订单金额</text>
        <text class="content">￥{{dataset.price}}</text>
    </view>

    <view class="submit">
        <view class="button" bind:tap="weChatPayment">微信付款</view>
    </view>
</view>
