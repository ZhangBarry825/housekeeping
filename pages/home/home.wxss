.page {
  width: 100%;
}
.page .swiper-box {
  width: 100%;
  height: 350rpx;
}
.page .swiper-box .swiper-item {
  width: 100%;
  height: 100%;
  color: #2bcf19;
}
.page .content-box {
  width: 100%;
  background-color: #f4f4f4;
  padding: 10rpx 10rpx;
  box-sizing: border-box;
}
.page .content-box .knowledge {
  margin: 10rpx 0;
  background-color: #fff;
  width: 100%;
  box-sizing: border-box;
  padding: 10rpx;
}
.page .content-box .knowledge .title {
  display: flex;
  justify-content: space-between;
  flex-direction: row;
  padding: 10rpx 0;
  align-items: center;
}
.page .content-box .knowledge .title .left {
  font-size: 28rpx;
  color: #2bcf19;
  border: 1px solid #2bcf19;
  border-radius: 10rpx;
  padding: 0 10rpx;
}
.page .content-box .knowledge .title .right {
  width: 30rpx;
  height: 30rpx;
}
.page .content-box .knowledge .items {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.page .content-box .knowledge .items .item {
  width: 50%;
}
.page .content-box .knowledge .items .item text {
  font-size: 23rpx;
  color: #5a5a5a;
  max-width: 100%;
  word-break: break-all;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}
.page .content-box .logos:after {
  content: '';
  width: 17%;
  min-width: 17%;
}
.page .content-box .logos {
  background-color: #FFF;
  width: 100%;
  padding: 0 30rpx;
  padding-top: 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  flex-direction: row;
}
.page .content-box .logos .item {
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 17%;
}
.page .content-box .logos .item image {
