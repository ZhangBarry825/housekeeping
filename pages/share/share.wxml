        <view class="line1">邀请好友</view>
        <view class="line2">
            <text>我获得的奖励</text>
            <image src="../../images/question.png"></image>
        </view>
        <view class="line3">
            <view class="box">
                {{dataDetail.balance}}<text> 元</text>
